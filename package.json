{
  "name": "leaderboard-api",
  "version": "1.0.0",
  "description": "Topcoder Leaderboard Ranking API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "init-db": "node src/init-db.js",
    "test-data": "node src/test-data.js",
    "mock-api": "NODE_ENV=test node test/common/mock.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "nyc --reporter=html --reporter=text mocha test/unit/test.js --timeout=20000 --require test/common/prepare.js --exit",
    "e2e": "nyc --reporter=html --reporter=text mocha test/e2e/test.js --timeout=20000 --require test/common/prepare.js --exit"
  },
  "author": "TCSCODER",
  "license": "none",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^6.1.4",
    "mocha-prepare": "^0.1.0",
    "nock": "^11.4.0",
    "nyc": "^14.1.1",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "config": "^1.21.0",
    "cors": "^2.7.1",
    "express": "^4.14.0",
    "get-parameter-names": "^0.3.0",
    "http-status-codes": "^1.3.0",
    "joi": "^14.0.0",
    "lodash": "^4.17.19",
    "mongoose": "^5.7.5",
    "superagent": "^5.1.0",
    "tc-core-library-js": "appirio-tech/tc-core-library-js.git#v2.6.3",
    "winston": "^3.1.0"
  },
  "engines": {
    "node": "10.x"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "nyc": {
    "exclude": [
      "src/init-db.js",
      "src/test-data.js",
      "test/common/*.js",
      "test/unit/test.js",
      "test/e2e/test.js"
    ]
  }
}
